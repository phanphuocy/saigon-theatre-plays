<%= form_for(@play) do |f| %>
  <%= render 'shared/errors' %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true%>
  </p>
  <p>
    <%= f.label :description %>
    <br />
    <%= f.text_area :description, cols: 100, rows: 10 %>
  </p>
  <p>
    <%= f.label :image_file_name %>
    <br />
    <%= f.text_field :image_file_name, size: 30, placeholder: "GIF, JPG, or PNG file name" %>
  </p>
  <p>
    <%= f.label :capacity %>
    <br />
    <%= f.number_field :capacity %>
  </p>
  <p>
    <%= f.label :from_price %>
    <br />
    <%= f.number_field :from_price %>
  </p>
  <p>
    <%= f.label :starts_at %>
    <br />
    <%= f.datetime_select :starts_at %>
  </p>
  <%= f.submit %>
  <%= link_to "Cancel", plays_path %>
<% end %>